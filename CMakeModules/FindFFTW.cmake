IF (USE_FFTW)

SET(FFTW_INC_SEARCHPATH

/usr/include

/usr/include/fftw

/usr/local/include

/usr/local/include/fftw

/opt/local/include

)

SET(FFTW_LIB_SEARCHPATH

/usr/lib

/usr/lib/fftw

/usr/local/lib

/usr/local/lib/fftw

/opt/local/lib

)

FIND_PATH(FFTW_INCLUDE_PATH fftw.h ${FFTW_INC_SEARCHPATH})

IF(FFTW_INCLUDE_PATH)

  SET(FFTW_INCLUDE ${FFTW_INCLUDE_PATH})

ELSE(FFTW_INCLUDE_PATH)

   FIND_PATH(FFTW_INCLUDE_PATH dfftw.h ${FFTW_INC_SEARCHPATH})

   IF(FFTW_INCLUDE_PATH)

      SET(FFTW_INCLUDE ${FFTW_INCLUDE_PATH})

   ENDIF (FFTW_INCLUDE_PATH)

ENDIF (FFTW_INCLUDE_PATH)

 

FIND_LIBRARY(FFTW_LIB_PATH fftw ${FFTW_LIB_SEARCHPATH})

IF(FFTW_LIB_PATH)

  SET(FFTW_LIB ${FFTW_LIB_PATH})

ELSE (FFTW_LIB_PATH)
  FIND_LIBRARY(FFTW_LIB_PATH dfftw ${FFTW_LIB_SEARCHPATH})

  IF(FFTW_LIB_PATH)

     SET(FFTW_LIB ${FFTW_LIB_PATH})
  ENDIF (FFTW_LIB_PATH)

ENDIF (FFTW_LIB_PATH)

 

IF(FFTW_INCLUDE)

  IF(FFTW_LIB)

    SET(FFTW_FOUND 1)

  ENDIF (FFTW_LIB)

ENDIF(FFTW_INCLUDE)

 

IF(FFTW_FOUND)

   INCLUDE_DIRECTORIES( ${FFTW_INCLUDE})

   LINK_LIBRARIES( ${FFTW_LIB} )

   ADD_DEFINITIONS(-DUSE_FFTW)

   SET(FFTW_DIR .)

ENDIF (FFTW_FOUND)

 

MARK_AS_ADVANCED(FFTW_INCLUDE_PATH FFTW_LIB_PATH)

ENDIF (USE_FFTW)